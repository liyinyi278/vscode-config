            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/msvc-32/bin/vscode-config-template.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PLATFORM",
